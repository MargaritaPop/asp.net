

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ASPLabs2_4.ViewModels.IndexViewModel

<div>
    <h3>Распродажа товаров</h3>
    @Html.ActionLink("Добавить новую товар", "Add")
    <br>
    <br>
    <form class="form-inline">
        <label>Выберите категорию:</label>
        <select name="categoryId" class="form-control">
            @foreach (var categoryModel in Model.Categories)
            {
                <option value="@categoryModel.Id">@categoryModel.Name</option>
            }
        </select>
        <label>Выберите производителя:</label>
        <select name="maker" class="form-control">
            <option>Все</option>
            @foreach (var a in Model.Stationeries)
            {

                <option value="@a.Maker">@a.Maker</option>
            }
        </select>
        <input type="submit" value="Фильтр">
    </form>
   
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Изображение</th>
                <th scope="col">Название</th>
                <th scope="col">Производитель</th>
                <th scope="col">Бренд</th>
                <th scope="col">Цена</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model.Stationeries)
            {
                <tr>
                    <td><img width="50" height="50" src="@b.ImagePath" /></td>
                    <td>@b.Name</td>
                    <td>@b.Maker</td>
                    <td>@b.Brand</td>
                    <td>@b.Price</td>
                    <td><a href="/Edit/Editor/@b.Id">Изменить</a></td>
                    <td><a href="/Cart/Add/@b.Id">Добавить в корзину</a></td>
                    <td><a href="/Edit/Delete/@b.Id">Удалить</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

